%html{:lang => 'en', :manifest => 'manifest'}
  %head
    %meta{:charset => 'utf-8'}
    %meta{:name => 'viewport', :content => 'width=device-width, minimum-scale=1, maximum-scale=1'}
    %meta{:name => 'author', :content => 'Developed by JN Solutions - http://www.jnsolutions.com.au'}
    %title
      Outback: Servicing Remote Clients
      - if Rails.env.development?
        ="(Version: #{File.mtime("#{Rails.root.to_path}/app/assets/javascripts/application.js").seconds_since_midnight})"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body#outback
    =yield
